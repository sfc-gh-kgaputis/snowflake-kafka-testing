{
  "name": "snowflake_json_events",
  "config": {
    "connector.class": "com.snowflake.kafka.connector.SnowflakeSinkConnector",
    "tasks.max": "8",
    "topics": "game_events",
    "snowflake.database.name": "sfkafka_testing",
    "snowflake.schema.name": "raw",
    "snowflake.topic2table.map": "game_events:game_events",
    "snowflake.ingestion.method": "SNOWPIPE_STREAMING",
    "snowflake.enable.schematization": "true",
    "snowflake.url.name": "${SNOWFLAKE_HOST}:443",
    "snowflake.user.name": "${SNOWFLAKE_USER}",
    "snowflake.private.key": "${SNOWFLAKE_PRIVATE_KEY}",
    "snowflake.private.key.passphrase": "${SNOWFLAKE_PASSPHRASE}",
    "snowflake.role.name": "${SNOWFLAKE_ROLE}",
    "buffer.count.records": "50000",
    "buffer.flush.time": "1",
    "buffer.size.bytes": "16777216",
    "snowflake.streaming.max.client.lag": "1",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "consumer.partition.assignment.strategy": "org.apache.kafka.clients.consumer.CooperativeStickyAssignor",
    "snowflake.streaming.client.provider.override.map": "ENABLE_SNOWPIPE_STREAMING_JMX_METRICS:true",
    "transforms": "addTimestampHeader,logIngestMetrics",
    "transforms.addTimestampHeader.type": "com.snowflake.examples.kafka.smt.AddSinkTimestampHeader",
    "transforms.logIngestMetrics.type": "com.snowflake.examples.kafka.smt.LogIngestMetrics"
  }
}